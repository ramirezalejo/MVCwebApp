@model BackEndNewsConfigurationEdit
<div class="row">
    <div class="col-lg-12">
        @using (Html.BootstrapBeginForm())
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.BootstrapSubmit(isConfirmActive: true)
                    @Html.BootstrapResetForm()
                </div>
                <div class="panel-body">

                    @Html.AntiForgeryToken()
                    @Html.BootstrapValidationSummary()

                    <div class="col-lg-6">
                        @Html.BootstrapCheckBoxFor(m => m.IsNewsActive)

                        @{
                            List<CmsPage> pageItems = new CmsPages().GetAllPages(true);
                            var selectListCmsPagesNewsPageId = new SelectList(pageItems, "PageId", "PageName", Model.NewsPageId);
                        }
                        @Html.BootstrapDropDownListFor(m => m.NewsPageId, selectListCmsPagesNewsPageId)

                        @Html.BootstrapTextBoxFor(m => m.NumberOfNewsInSummary)

                        @Html.BootstrapCheckBoxFor(m => m.IsCommentAutoApproved)
                    </div>
                </div>
            </div>
        }
    </div>
</div>