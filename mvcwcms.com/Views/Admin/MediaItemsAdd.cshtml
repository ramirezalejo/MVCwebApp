@model BackEndMediaItemsAdd
<div class="row">
    <div class="col-lg-12">
        @using (Html.BootstrapBeginForm())
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    @if (ViewData.IsFormVisible())
                    {
                        <text>
                            @Html.BootstrapSubmit()
                            @Html.BootstrapResetForm()
                        </text>
                    }
                    @Html.BootstrapButtonRedirect("/Admin/MediaItems/" + Model.MediaGalleryCode, MVCwCMS.Resources.Strings_MediaGalleries.MediaItems)
                </div>
                <div class="panel-body">

                    @Html.AntiForgeryToken()
                    @Html.BootstrapValidationSummary()

                    <div class="col-lg-6">
                        @Html.BootstrapTextBoxFor(m => m.MediaGalleryCode, isReadOnly: true)

                        @if (ViewData.IsFormVisible())
                        {
                            @Html.BootstrapCheckBoxFor(m => m.IsAllActive)

                            @Html.BootstrapMultiFilePathFor(m => m.Photos, resourceType: "Images")

                            @Html.BootstrapTextBoxFor(m => m.YouTubeVideos, className: "tokenfield-youtubevideo")
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>