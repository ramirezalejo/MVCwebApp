@model BackEndContentTemplatesAdd
<div class="row">
    <div class="col-lg-12">
        @using (Html.BootstrapBeginForm())
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.BootstrapSubmit()
                    @Html.BootstrapResetForm()
                    @Html.BootstrapButtonRedirect("/Admin/ContentTemplates", MVCwCMS.Resources.Strings.ContentTemplates)
                </div>
                <div class="panel-body">

                    @Html.AntiForgeryToken()
                    @Html.BootstrapValidationSummary()

                    <div class="col-lg-6">
                        @Html.BootstrapTextBoxFor(m => m.Title, autoFocus: true)

                        @Html.BootstrapCheckBoxFor(m => m.IsActive)

                        @Html.BootstrapTextBoxFor(m => m.Description)

                        @Html.BootstrapTextAreaFor(m => m.Content, className: "html-code", rows: 20)
                    </div>
                </div>
            </div>
        }
    </div>
</div>